<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MicroNutritionalist.Views.Product.AddOrEditProductPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="1" Text="Add" Command="{Binding AddClicked}"/>
            <Button Grid.Row="3" Text="Edit" Command="{Binding EditClicked}"/>
            <Button Grid.Row="5" Text="Delete Product" Command="{Binding DeleteProductClicked}"/>
            <Button Grid.Row="7" Text="Delete Nutrition" Command="{Binding DeleteNutritionClicked}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>